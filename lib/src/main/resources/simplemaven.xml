<template>
    <title>Simple maven Project</title>
    <steps>
        <input id="artifactId" content="Project Maven Artifact Id"/>
        <input id="projName" content="Project Name" default="${artifactId}"/>
        <input id="groupId" content="Maven Group Id"/>
    </steps>
    <files>
        <dir path="src">
            <dir path="main">
                <dir path="java"/>
                <dir path="resources"/>
            </dir>
            <dir path="test">
                <dir path="java"/>
                <dir path="resources"/>
            </dir>
        </dir>
        <file path="README.md">
            # ${artifactId}
        </file>
        <file path="pom.xml" resource="simplepom.xml"/>
    </files>
</template>