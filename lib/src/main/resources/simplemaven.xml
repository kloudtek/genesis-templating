<template>
    <title>Simple maven Project</title>
    <questions>
        <question id="artifactId" content="Project Maven Artifact Id"/>
        <question id="projName" content="Project Name" default="${artifactId}"/>
        <question id="groupId" content="Maven Group Id"/>
    </questions>
    <files>
        <dir path="src">
            <dir path="main">
                <dir path="java"/>
                <dir path="resources"/>
            </dir>
            <dir path="test">
                <dir path="java"/>
                <dir path="resources"/>
            </dir>
        </dir>
        <file path="README.md">
            # ${artifactId}
        </file>
        <file path="ignorable.txt" ignore="&lt;#if artifactId = 'myproject'&gt;true&lt;#else&gt;false&lt;/#if&gt;">
            im ignorable
        </file>
        <file path="pom.xml" resource="simplepom.xml"/>
    </files>
</template>