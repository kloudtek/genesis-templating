<templates>
    <template name="testOneFile">
        <files>
            <file path="README.md">
                # ${testval}
            </file>
        </files>
    </template>
    <template name="testOneFileWithInput">
        <steps>
            <input id="testval" message="doStuff"/>
        </steps>
        <files>
            <file path="README.md">
                # ${testval}
            </file>
        </files>
    </template>
    <template name="testOneFileWithTwoInputs">
        <steps>
            <input id="i1" message="foo"/>
            <input id="i2" message="bar"/>
        </steps>
        <files>
            <file path="README.md">
                # ${i1} - ${i2}
            </file>
        </files>
    </template>
    <template name="testWithOptions">
        <steps>
            <input id="myval" message="select myval">
                <option id="foo" text="foox"/>
                <option id="bar" text="barx"/>
            </input>
        </steps>
        <files>
            <file path="README.md">
                # ${myval}
            </file>
        </files>
    </template>
    <template name="testWithConditionalValueBasedOnOption">
        <steps>
            <input id="myval" message="select myval">
                <option id="foo" text="foox">
                    <input id="otherval" message="otherval"/>
                </option>
                <option id="bar" text="barx"/>
            </input>
        </steps>
        <files>
            <file path="README.md">
                # ${myval}
            </file>
        </files>
    </template>
</templates>